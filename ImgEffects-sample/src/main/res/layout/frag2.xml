<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ribbon and SlideIn"
                android:id="@+id/button"
                android:onClick="button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corner"
                android:id="@+id/button2"
                android:onClick="button2"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uncover and slideTop"
                android:id="@+id/button3"
                android:onClick="button3"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="move and slideBottom"
                android:id="@+id/button4"
                android:onClick="button4"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="slide and slideLeft"
                android:id="@+id/button5"
                android:onClick="button5"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fade and fade"
                android:id="@+id/button6"
                android:onClick="button6"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="slide middle"
                android:id="@+id/button7"
                android:onClick="button7"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>